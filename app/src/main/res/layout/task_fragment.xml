<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.titomi.workertrackerloginmodule.DashboardFragments.FragmentTask">



    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar"
            android:visibility="gone"

            />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@id/progressBar"/>

        <TableLayout
            android:id="@+id/small_task_table"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@id/piechart"
            android:showDividers="beginning">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="3dp"
                    android:layout_column="1"
                    android:text="Total Assigned Task "
                    android:textStyle="bold" />

                <TextView
                    android:text="1000"
                    android:padding="3dp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:id="@+id/taskAssignedCount"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="3dp"
                    android:layout_column="1"
                    android:text="Total Executed Task"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dp"
                    android:text="820"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:id="@+id/executedTaskCount"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="3dp"
                    android:layout_column="1"
                    android:text="Unexecuted Task"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dp"
                    android:gravity="end"
                    android:text="180"
                    android:textStyle="bold"
                    android:id="@+id/unexecutedTasksCount"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</ScrollView>