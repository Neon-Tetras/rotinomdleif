<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:id="@+id/user_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:layout_toEndOf="@id/user_icon"

                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username"
                        android:textSize="12sp"
                        android:text="Submitted on 3rd, Aug 2017"
                        android:layout_marginTop="1dp"
                        android:layout_alignStart="@id/username"
                        android:id="@+id/dateSubmitted"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supply of Pampers to Boys Secondary School, Ikoyi"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:layout_below="@id/user_icon"
                        android:id="@+id/taskTitle"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_below="@id/taskTitle"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/taskType">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Task Type:"
                            android:textSize="12sp"

                            android:layout_marginTop="5dp"
                            android:id="@+id/taskTypeLabel"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"

                            android:text="Hospital"

                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:id="@+id/taskTypeText"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_below="@id/taskType"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/institutionLayout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Institution:"
                            android:textSize="12sp"


                            android:layout_marginTop="5dp"
                            android:id="@+id/institution"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Ave Marie Hospital"
                            android:layout_marginStart="5dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:id="@+id/institutionText"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_below="@id/institutionLayout"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/addressLayout"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Address"
                            android:textSize="12sp"


                            android:layout_marginTop="5dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="12 Tunde Liadi street Akesan lagos"

                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:id="@+id/addressText"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_below="@id/addressLayout"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/stateTownLayout"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="State:"
                            android:textSize="12sp"


                            android:layout_marginTop="5dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="5dp"
                            android:text="Lagos"

                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:id="@+id/stateText"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="20dp"
                            android:text="Town:"
                            android:textSize="12sp"


                            android:layout_marginTop="5dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="5dp"
                            android:text="Ikeja"

                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:id="@+id/townText"
                            />
                    </LinearLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="5dp"
                        android:layout_below="@id/stateTownLayout"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/contactPersonLayout"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:useDefaultMargins="true"
                        android:alignmentMode="alignBounds"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Contact person"
                            android:textSize="12sp"


                            android:layout_marginTop="5dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Phone"
                            android:textSize="12sp"


                            android:layout_marginTop="5dp"
                            android:layout_gravity="center|top"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Mrs Lamidi"

                            android:textSize="14sp"
                            android:textColor="@color/black"

                            android:id="@+id/contactFullName"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="08034567903"

                            android:textSize="14sp"
                            android:textColor="@color/black"

                            android:id="@+id/contactPhone"
                            android:layout_gravity="center|bottom"
                            />
                    </GridLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="5dp"
                        android:layout_below="@id/contactPersonLayout"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:id="@+id/inventoryLayout"
                        android:columnCount="4"
                        android:rowCount="2"
                        android:useDefaultMargins="true"
                        android:alignmentMode="alignBounds"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity Given"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Persons met"
                            android:textSize="12sp"
                            android:layout_gravity="top|start"

                            android:layout_marginStart="20dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distributed"
                            android:textSize="12sp"
                            android:layout_gravity="center|top"
                            android:layout_marginStart="50dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="Balance"
                            android:textSize="12sp"
                            android:layout_marginStart="50dp"

                            android:layout_marginTop="5dp"
                            android:layout_gravity="center|top"


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:visibility="gone"
                            android:text="20"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/black"

                            android:id="@+id/quantityGivenText"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="14"

                            android:textSize="14sp"
                            android:textColor="@color/black"

                            android:id="@+id/participants"
                            android:layout_gravity="center_horizontal"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="14"

                            android:textSize="14sp"
                            android:textColor="@color/black"

                            android:id="@+id/quantityDistributedText"
                            android:layout_gravity="center|bottom"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"




                            android:textSize="14sp"
                            android:textColor="@color/black"

                            android:id="@+id/balanceText"
                            android:layout_gravity="center|bottom"




                            />
                    </GridLayout>


                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Images"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/reportImagesLayout"/>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentText"

                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exportText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"

                        android:drawableEnd="@drawable/export3"
                        android:gravity="center_vertical"
                        android:text="Export"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/approveText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"                                    android:drawableEnd="@drawable/ic_thumb_up_black_24dp"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:text="Approve"
                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
</LinearLayout>
